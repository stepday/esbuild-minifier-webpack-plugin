{
  "compileOnSave": true,
  "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "lib": ["ESNext"],
      "sourceMap": false,
      "target": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "declaration": true,
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "removeComments": false,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@typings/*": ["./typings/*"]
      }
  },
  "include": ["./src"]
}